<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/baseTicket"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TicketFinal"
    android:background="@color/Gris2"
    >

    <LinearLayout
        android:id="@+id/txt_Gracias"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:text="GRACIAS POR SU COMPRA"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/black"
            >
        </TextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/Ticket"
        android:layout_gravity="center"
        android:background="@color/Gris"
        android:layout_width="350dp"
        android:layout_height="600dp"
        android:orientation="vertical"
        android:elevation="20dp"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/articulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="prueba"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="10dp">
        </TextView>

        <TextView
            android:id="@+id/articulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="prueba"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="10dp">
        </TextView>

        <TextView
            android:id="@+id/articulo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="prueba"
            android:textStyle="bold"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_margin="10dp">
        </TextView>

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_margin="400dp"
            >
            <Button
                android:id="@+id/btn_Volver_Menu"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@color/black"
                android:text="Volver"
                android:textAlignment="center"
                android:elevation="20dp"
                >
            </Button>

        </LinearLayout>

    </LinearLayout>
</FrameLayout>